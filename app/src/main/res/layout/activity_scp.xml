<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/draw_layout"
    android:layout_gravity="center"
    android:background="#F8F0E3">

    <!--this the navigation view which draws
        and shows the navigation drawer-->
    <!--include the menu created in the menu folder-->

    <RelativeLayout
        android:id="@+id/clockLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:gravity="center">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            android:elevation="4dp"
            android:gravity="center"
            android:theme="@style/MyMaterialTheme.Base"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="#FFFFFF">
            <ImageView
                android:id="@+id/dspl_logo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/dspl_logo"
                app:tint="@color/whiteColor" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="1dp">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surgeon Control Panel"
                    android:textColor="@color/whiteColor"
                    android:textSize="18sp"
                    android:paddingEnd="8dp"/>

                <ImageView
                    android:id="@+id/connectionStatus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bluetooth_disconnected"
                    app:tint="@color/whiteColor" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:id="@+id/clkLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_toolbar"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/textClockLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:gravity="center"
                android:background="@color/custom_green"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_date_title"
                    android:textColor="@color/whiteColor"/>
                <TextView
                    android:id="@+id/hk_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteColor"
                    android:text="12:48:12"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/hk_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whiteColor"
                    android:layout_marginTop="1dp"
                    android:text="12/18/2020"
                    android:textSize="18sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_gravity="center"
                android:layout_height="match_parent"
                android:background="@color/darkGray"/>
            <LinearLayout
                android:id="@+id/timevalueLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/royal_blue"
                android:gravity="top|center"
                android:orientation="vertical">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="1dp"
                     >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/elapsed_time"
                        android:textColor="@color/whiteColor"/>

                    <TextView
                        android:id="@+id/timerValue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="00:00:00"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="48sp"/>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/startButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_play"
                        android:contentDescription="Start" />

                    <ImageButton
                        android:id="@+id/resetButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:layout_marginStart="15dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_reset_great"
                        android:contentDescription="Reset" />

                    <ImageButton
                        android:id="@+id/settingButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:layout_marginStart="15dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_settings"
                        android:contentDescription="Reset" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
        <View
            android:id="@+id/lio_d"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="3dp"
            android:layout_below="@id/clkLayout"
            android:background="@color/darkGray"/>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lio_d"
            >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_86dp"
            android:weightSum="2"
            android:layout_marginTop="1dp"
            android:background="@color/whiteColor"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/leftPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tempControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/temperature_control"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp">
                </TextView>

                <LinearLayout
                    android:id="@+id/tempLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/tempIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="3dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_temp_thermometer"/>

                    <TextView
                        android:id="@+id/temperatureTextView"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="00"
                        android:gravity="center"
                        android:textColor="@color/limeGreen"
                        android:textSize="29sp" />

                    <TextView
                        android:id="@+id/celUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/limeGreen"
                        android:text="&#xb0;C"
                        android:textSize="24sp"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/rightPart"
                android:layout_width="167dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_margin="6dp"
                android:layout_weight="1"
                android:background="@drawable/layout_bg_temp"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/setTempLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/tempBtnMinus"
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:layout_gravity="center"
                        android:background="@drawable/mybutton_minus"
                        android:src="@drawable/ic_minus" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/setPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/set_point"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/textSize"></TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tempSetTextView"
                                android:layout_width="42dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="3dp"
                                android:gravity="center"
                                android:text="00"
                                android:textColor="@color/colorBlack"
                                android:textSize="29sp" />

                            <TextView
                                android:id="@+id/tempUnit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="3dp"
                                android:layout_marginRight="6dp"
                                android:text="&#xb0;C"
                                android:textColor="@color/colorBlack"
                                android:textSize="24sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/tempBtnPlus"
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:layout_gravity="center"
                        android:background="@drawable/mybutton_plus"
                        android:src="@drawable/ic_plus" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_86dp"
        android:layout_below="@+id/LinearLayout02"
        android:layout_marginTop="3dp"
        android:background="@color/whiteColor"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/leftPart2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/humControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/humidity_control"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/humLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/ic_humidity_icon" />

                <TextView
                    android:id="@+id/humidityTextView"
                    android:layout_width="55dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/limeGreen"
                    android:textSize="29sp" />

                <TextView
                    android:id="@+id/humUnitShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/percent"
                    android:textColor="@color/limeGreen"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/rightPart2"
            android:layout_width="167dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_hum"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/setDiffLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/humBtnMinus"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:background="@drawable/mybutton_minus"
                    android:src="@drawable/ic_minus" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/setHumPointTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/set_point"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSize">

                    </TextView>


                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/humidSetTextView"
                            android:layout_width="42dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="00"
                            android:textColor="@color/colorBlack"
                            android:textSize="29sp" />

                        <TextView
                            android:id="@+id/humUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="6dp"
                            android:text="@string/percent_sign"
                            android:textColor="@color/colorBlack"
                            android:textSize="24sp" />
                </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/humBtnPlus"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/mybutton_plus"
                    android:src="@drawable/ic_plus" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_86dp"
        android:layout_below="@+id/LinearLayout"
        android:layout_marginTop="3dp"
        android:background="@color/whiteColor"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/leftPart3"
            android:layout_width="256dp"
            android:layout_height="84dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/diffControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/differential_air_pressure"
                android:textColor="@color/colorBlack"
                android:textSize="12sp">

            </TextView>

            <LinearLayout
                android:id="@+id/pressLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/diffPress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/ic_diff_pressure" />

                <TextView
                    android:id="@+id/pressureTextView"
                    android:layout_width="70dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="@string/_000"
                    android:textColor="@color/limeGreen"
                    android:textSize="29sp" />

                <TextView
                    android:id="@+id/prssureUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pa"
                    android:textColor="@color/limeGreen"
                    android:textSize="29sp" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/rightPart3"
            android:layout_width="297dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="6dp"
            android:layout_weight="1"
            android:background="@drawable/layout_bg_pressure"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/difSetPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:gravity="center"
                android:layout_marginBottom="6dp"
                android:text="@string/hepa_filter_status"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/textSize">
            </TextView>


            <TextView
                android:id="@+id/gasSevenStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/healthy"
                android:textColor="@color/colorBlack"
                android:textSize="29sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/gasAlarmTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/LinearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/gas_alarm"
            android:textColor="@color/whiteColor"
            android:textSize="18sp">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstRowGasLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:layout_below="@+id/gasAlarmTitleLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gasOne"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="@string/oxygen"
                    android:layout_gravity="center"
                    android:textColor="@color/whiteColor"/>

                <TextView
                    android:id="@+id/gasOneStatus"
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center"
                    android:text="@string/normal"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gasTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="@string/air_4_bar"
                    android:layout_gravity="center"
                    android:textColor="@color/whiteColor"/>

                <TextView
                    android:id="@+id/gasTwoStatus"
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center"
                    android:text="@string/normal"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gasThree"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="@string/nitrous_oxide"
                    android:layout_gravity="center"
                    android:textColor="@color/whiteColor"/>

                <TextView
                    android:id="@+id/gasThreeStatus"
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center"
                    android:text="@string/normal"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gasFour"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="@string/air_7_bar"
                    android:layout_gravity="center"
                    android:textColor="@color/whiteColor"/>

                <TextView
                    android:id="@+id/gasFourStatus"
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center"
                    android:text="@string/normal"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gasFive"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="24dp"
                    android:text="@string/carbon_dioxide"
                    android:textColor="@color/whiteColor"/>

                <TextView
                    android:id="@+id/gasFiveStatus"
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center"
                    android:text="@string/normal"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gasSix"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="@string/vacuum"
                    android:layout_gravity="center"
                    android:textColor="@color/whiteColor"/>

                <TextView
                    android:id="@+id/gasSixStatus"
                    android:layout_width="80dp"
                    android:layout_height="33dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center"
                    android:text="@string/normal"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



    <View
        android:id="@+id/lio"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:layout_height="1dp"
        android:layout_below="@id/firstRowGasLayout"
        android:background="@color/darkGray"/>

    <LinearLayout
        android:id="@+id/lightControlTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/lio"
        android:orientation="horizontal">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:layout_marginTop="1dp"
          android:textColor="@color/whiteColor"
          android:text="@string/light_control_title"
          android:textSize="18sp">

      </TextView>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/lightControlLayout1"
        android:layout_below="@id/lightControlTitle"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:gravity="center"

        android:clipToPadding="false"
        android:orientation="horizontal"
        >


        <ImageButton
