        android:layout_marginTop="100dp"
        android:src="@drawable/digiline_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Digiline System is a leading manufacturer of Token Systems.Token Number Display with human voice announcement is latest and built around high effciency micro controller based technology."
        android:id="@+id/textView4"
        android:textSize="22dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#f44336"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_below="@+id/developer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp" />


